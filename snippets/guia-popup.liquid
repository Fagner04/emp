    align-items: center;
    flex-direction: column;
    width: 100%;
    padding: 0 10px 10px;
}
.Elevate-pop-up-close {
    position: absolute;
    top: 30px;
    right: 15px;
    cursor: pointer;
    width: 40px;
    margin-top: -15px;
}
.Elevate-show-pop-up {
  z-index: 99999;
  opacity: 1;
  display: block;
  transform: scale(1);
